

<article>
	<p>Nachrichten hinzufügen</p>
	<form class="page-form" action="/pages/<%= currentUrl %>/addNewsContent">
		<input
			type="hidden"
			name="CSRFToken"
			value="<%= CSRFToken %>"
		/>
		<input type="hidden" value="<%= singleContent.type %>"  name="type">
		<input id="trix-content-add-news" type="hidden" value="" name="content">
		<trix-editor class="trix-content" input="trix-content-add-news"></trix-editor>
		<button type="submit">Veröffentlichen</button>
	</form>
	<%- include('remove', { singleContent }) %>
</article>
<% for(const singleNewsContent of newsContent) { %>
	<article>
		<p>Hier kann der Beitrag editiert werden<br></p>
		<form class="page-form" action="/pages/<%= currentUrl %>/updateNewsContent">
			<input
				type="hidden"
				name="CSRFToken"
				value="<%= CSRFToken %>"
			/>
			<input type="hidden" value="<%= singleNewsContent.id %>" name="id">
			<input type="hidden" value="<%= singleNewsContent.type %>"  name="type">
			<input id="trix-content-<%= singleNewsContent.id %>" type="hidden" value="<%= singleNewsContent.content %>" name="content">
			<trix-editor class="trix-content" input="trix-content-<%= singleNewsContent.id %>"></trix-editor>
			<button type="submit">Speichern</button>
		</form>
		<% if (typeof adminLoggedIn !== 'undefined' && adminLoggedIn === true) { %>
			<form class="page-form"  action="/pages/<%= currentUrl %>/removeNewsContent">
				<input
					type="hidden"
					name="CSRFToken"
					value="<%= CSRFToken %>"
				/>
				<input type="hidden" value="<%= singleNewsContent.id %>" name="id">
				<button type="submit">Entfernen</button>
			</form >
		<% } %>
	</article>
<% } %>
<div>
	<% for (let index = 1; index <= newsCount.length; index++) { %>
		<a href="/pages/<%= currentUrl %>?subPage=<%= index %>"><%= index %></a>
	<% } %>
</div>

