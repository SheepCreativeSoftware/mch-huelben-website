<section id="main" >
	<%- include('meta') %>
	<% if (typeof userLoggedIn !== 'undefined' && userLoggedIn === true) { %>
		<%# Welcome header %>
		<% let thatContent = {
			id: 'none',
			type: 'article-big',
			content: '',
		}
		if (typeof content[0] !== 'undefined') {
			thatContent = content[0]
		} %>
		<article>
			<h3>Willkommens-text</h3>
			<p>Hier kann der Bereich editiert werden<br></p>
			<form class="page-form" id="updatePageContent" action="/pages/<%= currentUrl %>/updatePageContent">
				<input
					type="hidden"
					name="CSRFToken"
					value="<%= CSRFToken %>"
				/>
				<input type="hidden" value="<%= thatContent.id %>" name="id">
				<input type="hidden" value="article-big"  name="type">
				<input id="trix-content-0" type="hidden" value="<%- thatContent.content %>" name="content">
				<trix-editor input="trix-content-0"></trix-editor>
				<button type="submit">Aktualisieren</button>
			</form>
		</article>

		<%# News preview %>
		<% thatContent = {
			id: 'none',
			type: 'news-preview',
			content: '',
		}
		if (typeof content[1] !== 'undefined') {
			thatContent = content[1]
		} %>
		<article>
			<h3>Nachrichten Vorschau</h3>
			<form class="page-form" id="updatePageContent" action="/pages/<%= currentUrl %>/updatePageContent">
				<input
					type="hidden"
					name="CSRFToken"
					value="<%= CSRFToken %>"
				/>
				<input type="hidden" value="<%= thatContent.id %>" name="id">
				<input type="hidden" value="news-preview"  name="type">
				<label for="manual-content-1">Maximale Zeichenl√§nge</label>
				<input id="manual-content-1" type="number" value="<%- thatContent.content %>" name="content">
				<button type="submit">Aktualisieren</button>
			</form>
		</article>

		<%# Gallery Preview %>
	<% } %>
	</section>