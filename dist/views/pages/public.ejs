<section id="main" >
	<% hasAside = false;
	for(const singleContent of content) { 
		if(singleContent.type.includes('aside')) hasAside = true;
	}%>
	<div id="article" class="<% if (hasAside) { %><%= 'hasAside' %><% } else { %><%= 'noAside' %><% } %>">
	<% for(const singleContent of content) { %>
			<% if (singleContent.type === 'article-big') { %>
				<article class="article-big" >
					<div class="article-content trix-content">
						<%- singleContent.content %>
					</div>
					<p class="article-date">
						Veröffentlicht: <%= new Date(singleContent.created).toLocaleString('de-DE', dateOptions) %><% if (singleContent.updated) { %> - Aktualisiert: <%= new Date(singleContent.updated).toLocaleString('de-DE' , dateOptions) %><% } %></p>
				</article>
			<% } %>

			<% if (singleContent.type === 'news-preview') { %>
				<article class="news-preview" >
					<div class="article-content trix-content">
						<%- singleContent.content %>
					</div>
					<p class="article-date">
						Veröffentlicht: <%= new Date(singleContent.created).toLocaleString('de-DE', dateOptions) %><% if (singleContent.updated) { %> - Aktualisiert: <%= new Date(singleContent.updated).toLocaleString('de-DE' , dateOptions) %><% } %></p>
				</article>
			<% } %>
	<% } %>
	</div>
	<% if(hasAside) { %>
	<aside>
		<% for(const singleContent of content) { %>
			<% if (singleContent.type === 'aside-info') { %>
				<section class="aside-info" >
					<div class="aside-content">
						<%- singleContent.content %>
					</div>
				</section>
			<% } else if (singleContent.type === 'aside-maps') { %>
				<section class="aside-maps" >
					<div class="aside-content">
						<a href="<%- singleContent.content %>"><%- singleContent.content %></a>
					</div>
				</section>
			<% } %>
		<% } %>
	</aside>
	<% } %>
</section>
<div>&nbsp;</div>