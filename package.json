{
	"name": "mch-huelben-website",
	"license": "UNLICENSED",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"browser-open": "open 'http://localhost:3000/'",
		"clean": "rm -rf dist/",
		"prebuild": "yarn run clean",
		"dev": "tsx watch --ignore 'vite.config*' --clear-screen=false --env-file=.env.local src/app.mts",
		"build": "yarn build:server && yarn build:client-ssr && yarn build:server-ssr",
		"build:server": "yarn tsc --project tsconfig.server.json",
		"build:client-ssr": "vite build --ssrManifest --outDir dist/ssr/client",
		"build:server-ssr": "vite build --ssr src/ssr/entry-server.ts --outDir dist/ssr/server",
		"lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:tsc",
		"lint:eslint": "eslint --cache --cache-strategy content",
		"lint:eslint:fix": "yarn lint:eslint --fix",
		"lint:prettier": "yarn prettier --check \"**/*.{xml,json,yml,yaml,css}\"",
		"lint:prettier:fix": "yarn prettier --write \"**/*.{xml,json,yml,yaml,css}\"",
		"lint:tsc:ssr": "vue-tsc --noEmit",
		"lint:tsc:server": "yarn tsc --project tsconfig.server.json --noEmit",
		"lint:tsc": "yarn lint:tsc:ssr && yarn lint:tsc:server",
		"test": "tsx --test 'src/**/*.test.ts'",
		"test:watch": "tsx --test --watch \"**/*.test.ts\"",
		"test:coverage": "tsx --test --experimental-test-coverage \"**/*.test.ts\"",
		"typeorm": "typeorm-ts-node-esm -d src/server/database/datasource.ts",
		"production": "node dist/app.mjs",
		"preview": "NODE_ENV=production node --env-file=.env.local dist/app.mjs",
		"prepare": "husky"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"buntstift": "^5.0.2",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dompurify": "^3.1.6",
		"express": "^4.19.2",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"jwt-decode": "^4.0.0",
		"mariadb": "^3.3.1",
		"nodemailer": "^6.9.15",
		"pinia": "^2.2.2",
		"sirv": "^2.0.4",
		"trix": "^2.1.5",
		"typeorm": "^0.3.20",
		"vue": "^3.4.23",
		"vue-router": "^4.4.3",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
		"@eslint/js": "^9.10.0",
		"@stylistic/eslint-plugin": "^2.7.2",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "^22.5.4",
		"@types/nodemailer": "^6.4.15",
		"@vitejs/plugin-vue": "^5.0.4",
		"cross-env": "^7.0.3",
		"eslint": "^9.10.0",
		"eslint-plugin-vue": "^9.28.0",
		"globals": "^15.9.0",
		"husky": "^9.1.5",
		"mysql": "^2.18.1",
		"prettier": "^3.3.3",
		"reflect-metadata": "^0.2.2",
		"tsx": "^4.19.1",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.4.0",
		"vite": "^5.2.10",
		"vue-tsc": "^2.0.14",
		"yarn": "^1.22.22"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
