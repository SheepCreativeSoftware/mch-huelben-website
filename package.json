{
	"name": "mch-huelben-website",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist/",
		"prebuild": "yarn run clean",
		"dev": "node server",
		"build": "npm run build:client && npm run build:server",
		"build:client": "vite build --ssrManifest --outDir dist/client",
		"build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
		"lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:tsc",
		"lint:eslint": "eslint --cache --cache-strategy content",
		"lint:eslint:fix": "yarn lint:eslint --fix",
		"lint:prettier": "npx prettier --check \"**/*.{xml,json,yml,yaml}\"",
		"lint:prettier:fix": "npx prettier --write \"**/*.{xml,json,yml,yaml}\"",
		"lint:tsc": "vue-tsc --noEmit",
		"preview": "cross-env NODE_ENV=production node server"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"express": "^4.19.2",
		"sirv": "^2.0.4",
		"typeorm": "^0.3.20",
		"vue": "^3.4.23"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@stylistic/eslint-plugin": "^2.7.2",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^4.17.21",
		"@types/node": "^20.12.7",
		"@vitejs/plugin-vue": "^5.0.4",
		"cross-env": "^7.0.3",
		"eslint": "^9.10.0",
		"eslint-plugin-vue": "^9.28.0",
		"globals": "^15.9.0",
		"husky": "^9.1.5",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.4.0",
		"vite": "^5.2.10",
		"vue-tsc": "^2.0.14",
		"yarn": "^1.22.22"
	},
	"engines": {
		"node": ">=22.6.0"
	}
}
