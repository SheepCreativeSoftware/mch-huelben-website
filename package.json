  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "yarn run clean",
    "dev": "node --experimental-strip-types --env-file=.env.local  src/app.ts",
    "build": "yarn build:server && yarn build:client-ssr && yarn build:server-ssr",
    "build:server": "echo Not implemented",
    "build:client-ssr": "vite build --ssrManifest --outDir dist/ssr/client",
    "build:server-ssr": "vite build --ssr src/server-side-rendering/entry-server.ts --outDir dist/ssr/server",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:tsc",
    "lint:eslint": "eslint --cache --cache-strategy content",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:prettier": "npx prettier --check \"**/*.{xml,json,yml,yaml}\"",
    "lint:prettier:fix": "npx prettier --write \"**/*.{xml,json,yml,yaml}\"",
    "lint:tsc": "vue-tsc --noEmit",
    "production": "NODE_ENV=production node --env-file=.env.local dist/app.js",
    "prepare": "husky"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "buntstift": "^5.0.2",
